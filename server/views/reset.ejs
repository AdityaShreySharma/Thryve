<%- include("partials/header")  %>

<form action="/otp/reset/<%= token %>" method="POST">
    <p>
        <label>New Password:</label>
        <input class="w3-input" type="password" name="password" placeholder="New Password" style="width: 90%;color:black;" autofocus required>
    </p>
    <p>
        <label>Confirm Password:</label>
        <input class="w3-input" type="password" name="confirm" placeholder="Confirm Password" style="width: 90%;color:black;" required>
    </p>
    <p>
        <button class="w3-button w3-section w3-teal w3-ripple"> Update Password </button>
    </p>
</form>
<%- include("partials/footer")  %>