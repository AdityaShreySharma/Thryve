<%- include("../partials/header")  %>
<div class="w3-container" style="min-height: 100vh;">
    <h1 style="text-align: center;">New Exercise</h1>
        <form action="/workout/exercise" method="POST" class="w3-light-gray w3-padding-small" style="min-height: 80vh;">
            <div>
                <input class="w3-input w3-margin-bottom" type="text" name="exercise[name]" placeholder="name" required>
            </div>
            <div>
                <input class="w3-input w3-margin-bottom" type="text" name="exercise[tag]" placeholder="tag" required>
            </div>
            <div>
                <input class="w3-input w3-margin-bottom" type="number" name="exercise[MET]" placeholder="MET" min="0" step="0.1" max="15">
            </div>
            <div style="min-height: 70%;">
                <textarea class="w3-input w3-margin-bottom" placeholder="steps"  name="exercise[steps]"  rows="20" cols="100" required></textarea>
            </div>
            <!-- BUTTONS -->
            <a class="w3-button w3-teal w3-round" style="text-decoration: none;" href="/workout">BACK</a>
            <button class="w3-button w3-blue w3-round">Submit</button>
        </form>
</div>
<%- include("../partials/footer")  %>
